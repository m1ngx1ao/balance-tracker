<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BalanceTracker" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:fontFamily">@font/c64_rounded</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:textColor">@color/c64_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/c64_blue</item>
        <item name="android:buttonStyle">@style/Theme.BalanceTracker.Button</item>
        <item name="android:editTextStyle">@style/Theme.BalanceTracker.EditText</item>
    </style>

    <style name="Theme.BalanceTracker.Button" parent="android:Widget.Material.Button">
        <item name="android:background">@color/c64_lightBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.BalanceTracker.EditText" parent="android:Widget.Material.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/c64_lightBlue</item>
    </style>

    <style name="SettleAccountDialogTheme" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:background">@color/c64_red</item>
        <item name="android:textColor">@color/c64_white</item>
    </style>
</resources>