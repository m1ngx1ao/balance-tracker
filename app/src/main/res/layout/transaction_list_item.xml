<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transactionListItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/transactionListItemAmountTextView"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/transactionListItemDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/transactionListItemAmountTextView"
        android:textSize="@dimen/font_size_smaller"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/transactionListItemDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/transactionListItemAmountTextView"
        android:layout_below="@id/transactionListItemDescriptionTextView"
        android:textSize="@dimen/font_size_almost_tiny"
        android:background="@android:color/transparent"
        />
</RelativeLayout>