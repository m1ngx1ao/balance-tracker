<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toastLinearLayout"
    android:padding="8dp"
    android:background="@color/c64_grey"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/toastTextView"
        android:padding="4dp"
        android:background="@color/c64_lightGrey"
        android:textColor="@color/c64_blue"
        android:textSize="@dimen/font_size_smaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>